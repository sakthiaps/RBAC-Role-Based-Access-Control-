<div class="container role">
  <p class="orange-text text-lighten-1 flow-text">Add</p>
  <%= form_for(@role, html: {class: "form-horizontal"}) do |form| %>
    <%= render('roles/form', :form => form) %>
    <%= submit_tag("Save", :class => "btn btn-primary") %>
    <%= link_to("Cancel", roles_path, :class => "btn btn-primary") %>
  <% end %>
</div>
